<!--          	<intent-filter> -->
<!--            	 	<action android:name="android.intent.action.BOOT_COMPLETED" /> -->
<!--          	</intent-filter> -->
<!--     	</receiver> -->
        <receiver android:name=".service.NotifReceiver" />
        <service android:name=".service.NotifService" />
    </application>

</manifest>